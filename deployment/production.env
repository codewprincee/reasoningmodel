# AI Model Trainer Production Environment Configuration
# Copy this to .env and update with your actual values

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gpt-oss-20b

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration (update with your domain)
FRONTEND_URL=https://your-domain.com

# Database Configuration
DATABASE_URL=sqlite:///./training_data.db

# Security
SECRET_KEY=your-super-secret-key-here-change-this

# Environment
ENVIRONMENT=production

# CORS Configuration (add your frontend domains)
ALLOWED_ORIGINS=["https://your-domain.com", "https://www.your-domain.com"]

# Logging
LOG_LEVEL=INFO

# Optional: If using external database
# DATABASE_URL=postgresql://user:password@localhost/ai_model_trainer

# Optional: If using cloud storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-s3-bucket-name
