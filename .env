# AI Model Trainer Production Environment Configuration
# Copy this to .env and update with your actual values

# Ollama Configuration
OLLAMA_HOST=https://apipdoll.hyperbrainlabs.com/ḹ
OLLAMA_MODEL=gpt-oss-20b

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration (update with your domain)
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=sqlite:///./training_data.db

# Security
SECRET_KEY=local-development-secret-key-not-for-production

# Environment
ENVIRONMENT=development

# CORS Configuration (add your frontend domains)
ALLOWED_ORIGINS=["http://localhost:3000"]

# Logging
LOG_LEVEL=DEBUG

# Optional: If using external database
# DATABASE_URL=postgresql://user:password@localhost/ai_model_trainer

# Optional: If using cloud storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-s3-bucket-name
